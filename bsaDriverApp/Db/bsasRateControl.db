record(bo, "$(DEVICE):BSAS_M$(IDX)$(CTRL_PV):ENB")
{
    field(DESC, "enable/disable for BSAS EDEF")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) edefEnable_$(IDX)_$(CTRL)")
    field(DOL, "$(GLOBAL):BSASM$(IDX)$(CTRL_PV):ENB CPP NMS")
    field(OMSL, "closed_loop")
    field(SCAN, "Passive")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    info(autosaveFields, "VAL")
}


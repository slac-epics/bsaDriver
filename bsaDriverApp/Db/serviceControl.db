
#   Service control PVs
#   affect entire service
#


record(longout, "$(DEVICE):$(SERVICE)_CTRL:PKSZ")
{
    field(DESC, "$(SERVICE) Packet Size")
#    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT), 0) $(SERVICE)_packetSize")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    info(autosaveFields, "VAL")
}

record(bo, "$(DEVICE):$(SERVICE)_CTRL:ENB")
{
    field(DESC, "Enable $(SERVICE)")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) $(SERVICE)_enable")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    field(VAL, "1")
    info(autosaveFields, "VAL")
}


